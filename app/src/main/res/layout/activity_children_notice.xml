<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.twinly.enotices.enoticesapp.activity.ChildrenNoticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/btn_back_blk" />

        <ImageView
            android:id="@+id/iv_children_icon_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@mipmap/ic_default" />

        <TextView
            android:id="@+id/tv_student_name_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Children Name" />

        <ImageView
            android:id="@+id/iv_school_information"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            app:srcCompat="@mipmap/school_info" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        ></View>

    <FrameLayout
        android:id="@+id/frame_fragments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        ></View>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rg_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RadioButton
                android:id="@+id/rbtn_pending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#ffffff"
                android:drawableTop="@drawable/selector_pending"
                android:button="@null"
                android:checked="true"
                android:textSize="10sp"
                android:text="Pending" />

            <RadioButton
                android:id="@+id/rbtn_notice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="#ffffff"
                android:drawableTop="@drawable/selector_notice"
                android:textSize="10sp"
                android:text="Notice" />

            <RadioButton
                android:id="@+id/rbtn_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:button="@null"
                android:drawableTop="@drawable/selector_event"
                android:gravity="center"
                android:text="event"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbtn_announ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#ffffff"
                android:drawableTop="@drawable/selector_announcement"
                android:gravity="center"
                android:text="announcement"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbtn_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="#ffffff"
                android:drawableTop="@drawable/selector_more"
                android:textSize="10sp"
                android:text="more" />
        </RadioGroup>
    </FrameLayout>


</LinearLayout>
